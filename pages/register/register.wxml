
<!--pages/login/login.wxml-->

<view class='container'>

  <view class='header'>

    <text>注册</text>

  </view>

  <form bindsubmit="formSubmit">

    <view class='section'>

      <text>账号：</text>

      <input type='number' placeholder='请输入账号' name="name"/>

    </view>

    <view class='section'>

      <text>密码:</text>

      <input password='true' placeholder='请输入密码' name="pwd"/>

    </view>
      <view class='section'>

      <text>邮箱:</text>

      <input type='number' placeholder='请输入邮箱' name="email"/>

    </view>
        <view class="section">
  <view class="section__title"></view>
  <picker mode="date" value="{{date}}" start="1900-09-01" end="2019-11-21" bindchange="bindDateChange" name="birthday">
    <view class="picker">
      生日: {{date}}
    </view>
  </picker>
</view>

    <view class='button'>

      <button type='primary' form-type='submit'>注册</button>

    </view>

  </form>

</view>
