<!--pages/orders/orders.wxml-->
<form bindsubmit="formSubmit">

  <view class="group-hd">商品</view>
  <view class="group-bd  line-after-top ">
    <view class="food-list line-before-bottom" wx:for="{{goods}}">

      <view class="orderListDetails">
        <view class="productImg">
          <image src="{{item.goods_img}}"></image>
        </view>
        <view class="productInfo">
          <view class="productTitle"><input name='goods_name' value="{{item.goods_name}}" placeholder="{{item.goods_name}}"></input></view>
          <input name='goods_id' value="{{item.goods_id}}" style="display:none;"></input>
          <text class="productPrice">￥{{item.goods_price}}</text>
          <text class="productQuantity">x{{item.goods_num}}</text>
        </view>
      </view>
    </view>
  </view>
  <view class="group-ft">
    <text class="font-color-999"><text style="font-size:20px;">订单总额：</text>
    <text class="font-color-c24e4e" style="font-size:40rpx; margin-left:24rpx;">¥<input name='money' value="{{money}}" placeholder="{{money}}"></input></text></text>
  </view>


  <navigator url="../addrlist/addrlist" class="address-group arrow-right">
    <view class="address-group-hd">
      <text style="font-size:20px;">收货信息：</text>
    </view>
    <view class="df">
      <view class="df_1 c6">
      <input name='shouaddr' value="{{shouinfo.id}}" style="display:none;"></input>
        <view class="l_h20 mt5" style="margin-left:10px;">收货人：{{shouinfo.name}}</view>
        <view class="l_h20 mt5" style="margin-left:10px;">手机号：{{shouinfo.phone}}</view>
        <view class="l_h20 mt5" style="margin-left:10px;">地址：{{shouinfo.addr}}</view>
      </view>
    </view>
  </navigator>

  <view class="payTitle">
    <text style="font-size:20px;">支付方式：</text>
  </view>
  <view class="payType">
    <radio-group name="paytype">
      
        <radio value="微信" />
        <view class="payList">
          <view class="payImg">
            <image src="../images/weixinzhifu.png"></image>
          </view>
          <view>微信支付</view>
        </view>
      
        <radio value="支付宝" />
        <view class="payList">
          <view class="payImg">
            <image src="../images/zhifubao.png"></image>
          </view>
          <view>支付宝支付</view>
        </view>
      
        <radio value="货到付款" />
        <view class="payList">
          <view class="payImg">
            <image src="../images/huodaofukuan.png"></image>
          </view>
          <view>货到付款</view>
        </view>
      
    </radio-group>

  </view>

  <view style="width:100%;height:140rpx;"></view>
  <view class="fixed-ft foot-box">
    <button formType="submit">确认下单</button>
  </view>
</form>