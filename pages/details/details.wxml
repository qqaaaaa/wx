<!--pages/detail/detail.wxml-->
<!-- banner -->
 
<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
  <block wx:for="{{images}}">
    <swiper-item>
      <image src="{{item.image}}" data-src="{{item}}" bindtap="previewImage" mode="widthFix"></image>
    </swiper-item>
  </block>
</swiper>
<!--商品价格和商品描述-->
<view>
<view class="product-name-wrap">
    {{red.pstore}}
  </view>
  <view class="product-price-wrap">
      <view>
        <p class="product-price-new">￥{{red.monry}}</p>   
      </view>
  </view>
</view>
<view></view>
 <view class="details"> 
  <scroll-view scroll-y="true">
    <text>商品详情</text>
    <view></view>
    <p class="product-price-new">商品简介：{{red.intro}}</p>  
    <block wx:for-items="{{images}}" wx:key="name">
       <image class="image_detail" src="{{item.image}}" mode="widthFix"/> 
    </block>
    <view class="temp"></view>
  </scroll-view>
 </view>   
<!-- 底部悬浮栏 -->
<view class="detail-nav">
  <image bindtap="toCar" src="../images/gouwuche.png" />  
  <view class="line_nav"></view>
   <image bindtap="addLike" id="{{red.id}}" src="{{isLike?'../images/shoucang1.png':'../images/shoucang.png'}}" /> 
  <button data-goodid="1"  class="button-green" bindtap="toggleDialog" >加入购物车</button>
  <button class="button-red" bindtap="immeBuy" formType="submit">立即购买</button>
</view>

<!--加入购物车-->

<view class="dialog {{ showDialog ? 'dialog--show' : '' }}">
      <view class="dialog__mask" bindtap="toggleDialog" />
      <view class="dialog__container">
        <view class="row">
          <icon bindtap="closeDialog" class="image-close" type="cancel" size="25"/>
          <image class="image-sku" src="{{red.image}}"></image>
          <view class="column">
            <text class="sku-price">￥{{red.monry}}</text>
            <text class="sku-title">销量 {{red.num}} 件</text>
            <text class="sku-title">商品编码：{{red.id}}</text>
          </view>
        </view>
